#include<stdio.h>
#include<conio.h>
#include<cstdlib>
using namespace std;
int main()
{   system("color b"); 
    int burst[20],process[20],wait[20],priority[20];
    int i,j,n,total=0,pos,temp;
    float avg_wait,avg_turn;
    printf("\n************** Non Pre-emptive Scheduling Approach with Priority! **************");
    printf("\n\n Enter number of process: ");
    scanf("%d",&n);
 
    printf("\nEnter Burst Time:\n");
    for(i=0;i<n;i++)
    {
        printf("For Process %d:",i+1);
        scanf("%d",&burst[i]);
        process[i]=i+1;          
 
    for(i=0;i<n;i++)
    {
        pos=i;
        for(j=i+1;j<n;j++)
        {
            if(burst[j]<burst[pos])
                pos=j;
        }
 
        temp=burst[i];
        burst[i]=burst[pos];
        burst[pos]=temp;
 
        temp=process[i];
        process[i]=process[pos];
        process[pos]=temp;
    }
 
    wait[0]=0;            
    for(i=1;i<n;i++)
    {
        wait[i]=0;
        for(j=0;j<i;j++)
            wait[i]+=burst[j];
 
        total+=wait[i];
    }
 
    avg_wait=(float)total/n;    
    printf(" ___________________________________________________");
    printf("\n| Process\t    Burst Time    \tWaiting Time|\n");
    for(i=0;i<n;i++)
    {
        
        printf("\n| P%d\t\t\t   %d\t\t      %d\t    |",process[i],burst[i],wait[i]);
    }
    printf("\n ___________________________________________________");
    printf("\n\nAverage Waiting Time=%f",avg_wait);
}}
